{
  "name": "opentutor-grading-api",
  "version": "1.0.0",
  "description": "opentutor project backend setup",
  "main": "dist/app.js",
  "engines": {
    "node": ">=13.2",
    "npm": ">=6.13.1"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.{js,jsx,json,ts,tsx}'",
    "lint:fix": "eslint src --ext ts --ext js --fix",
    "start": "tsc && node dist/server.js",
    "test": "export ENV=test && export NODE_ENV=test && npx mocha -r tsconfig-paths/register -r ts-node/register -r source-map-support/register './test/**/*.{spec,test}.{js,ts}' --timeout 10000 --full-trace --recursive --reporter spec --delay --exit",
    "test:all": "npm run test:format && npm run test:lint && npm run test:audit && npm run test:types && npm test",
    "test:audit": "npm audit --audit-level=moderate --production",
    "test:format": "prettier --check '**/*.{js,jsx,json,ts,tsx}'",
    "test:lint": "eslint src --ext ts --ext js",
    "test:types": "tsc --noEmit"
  },
  "author": "CVM",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.3.0",
    "is-hex": "^1.1.3",
    "longjohn": "^0.2.12",
    "mongoose": "^5.9.22",
    "mongoose-cursor-pagination": "^1.0.1",
    "morgan": "^1.10.0",
    "uuid": "^8.2.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/express-graphql": "^0.9.0",
    "@types/mocha": "^7.0.2",
    "@types/mongoose": "^5.7.30",
    "@types/morgan": "^1.9.1",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "chai": "^4.2.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^8.0.1",
    "mocha-logger": "^1.0.6",
    "mocha-prepare": "^0.1.0",
    "mongo-unit": "^2.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.2",
    "ts-sinon": "^1.2.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.6"
  }
}
