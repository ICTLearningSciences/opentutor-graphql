{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "node_modules/*"],
      "test/*": ["test/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "outDir": "./dist"
  },
  "include": ["src/**/*", "test"],
  "exclude": ["dist", "node_modules", "test"]
}
