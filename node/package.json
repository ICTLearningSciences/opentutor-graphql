{
  "name": "opentutor-graphql",
  "version": "1.0.0",
  "description": "opentutor project backend setup",
  "main": "dist/app.js",
  "engines": {
    "node": ">=13.2",
    "npm": ">=6.13.1"
  },
  "scripts": {
    "build": "tsc",
    "deps:update": "npx ncu -u",
    "format": "prettier --write '**/*.{js,jsx,json,ts,tsx}'",
    "lint:fix": "eslint src --ext ts --ext js --fix",
    "start": "tsc && node dist/server.js",
    "test": "export ENV=test && export NODE_ENV=test && npx mocha -r tsconfig-paths/register -r ts-node/register -r source-map-support/register './test/**/*.{spec,test}.{js,ts}' --timeout 10000 --full-trace --recursive --reporter spec --delay --exit",
    "test:all": "npm run test:format && npm run test:lint && npm run test:audit && npm run test:types && npm test",
    "test:audit": "npm audit --audit-level=moderate --production",
    "test:format": "prettier --check '**/*.{js,jsx,json,ts,tsx}'",
    "test:lint": "eslint src --ext ts --ext js",
    "test:types": "tsc --noEmit",
    "license:fix": "license-check-and-add remove -f license-config.json && license-check-and-add add -f license-config.json",
    "test:license": "license-check-and-add check -f license-config.json"
  },
  "author": "CVM",
  "license": "ISC",
  "dependencies": {
    "@types/object-path": "^0.11.0",
    "axios": "^0.21.1",
    "base64url": "^3.0.1",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "csv-stringify": "^5.5.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.4.0",
    "graphql-type-json": "^0.3.2",
    "is-hex": "^1.1.3",
    "jsonwebtoken": "^8.5.1",
    "longjohn": "^0.2.12",
    "mongo-cursor-pagination": "^7.3.1",
    "mongoose": "^5.9.24",
    "morgan": "^1.10.0",
    "object-path": "^0.11.5",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "uuid": "^8.3.1",
    "winston": "^3.3.3",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.14",
    "@types/cors": "^2.8.8",
    "@types/csv-stringify": "^3.1.0",
    "@types/ejson": "^2.1.2",
    "@types/express": "^4.17.9",
    "@types/express-graphql": "^0.9.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.0.4",
    "@types/mongoose": "^5.10.0",
    "@types/morgan": "^1.9.2",
    "@types/passport": "^1.0.4",
    "@types/passport-http-bearer": "^1.0.36",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "chai": "^4.2.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "license-check-and-add": "^3.0.4",
    "mocha": "^8.2.1",
    "mocha-logger": "^1.0.7",
    "mocha-prepare": "^0.1.0",
    "mongo-unit": "^2.0.1",
    "npm-check-updates": "^10.0.0",
    "prettier": "^2.1.2",
    "sinon": "^9.2.1",
    "sinon-chai": "^3.5.0",
    "supertest": "^4.0.2",
    "timekeeper": "^2.2.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  }
}
